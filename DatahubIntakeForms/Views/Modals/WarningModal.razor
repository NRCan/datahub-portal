@inject UIControlsService UI

<div class="modal-content">
    <Typography Variant="h4" class="modal-header">Warning</Typography>
    <div class="modal-body">@WarningText</div>
    <div class="modal-footer">
        <button class="submitbutton finish" @onclick="() => OnDecision?.Invoke(true)">Ok</button>
    </div>
</div>

@code{
    [Parameter]
    public Action<bool> OnDecision { get; set; }
    [Parameter]
    public string WarningText { get; set; }

}