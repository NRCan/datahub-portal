@inject UIControlsService UI

<div class="modal-content">
    <Typography Variant="h4" class="modal-header">Alert</Typography>
    <div class="modal-body">@ChoiceText</div>
    <div class="modal-footer">
        <button class="submitbutton cancel" @onclick="() => OnDecision?.Invoke(false)">Cancel</button>
        <button class="submitbutton finish" @onclick="() => OnDecision?.Invoke(true)">Confirm</button>
    </div>
</div>

@code{
    [Parameter]
    public Action<bool> OnDecision { get; set; }
    [Parameter]
    public string ChoiceText { get; set; }

}